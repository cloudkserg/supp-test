{% extends 'layouts.mail.twig' %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0" width="90%" style="width: 90% !important; min-width: 90%; max-width: 90%; background: #ffffff; border-radius: 6px; border-width: 1px; border-style: solid; border-color: #e9e9e9; box-shadow: 0px 2px 9px rgba(0, 0, 0, 0.1);">
    <tr>
      <td width="24" style="width: 24px; max-width: 24px; min-width: 24px; border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">&nbsp;</td>
      <td align="left" valign="top" style="border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">
          <div style="height: 37px; line-height: 37px; font-size: 35px;">&nbsp;</div>
          <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 28px; line-height: 34px; font-weight: bold;">Новая заявка</span>
          <div style="height: 3px; line-height: 3px; font-size: 1px;">&nbsp;</div>
          <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 28px; line-height: 32px;">от компании <a href="{{ get_env('APP_FRONTEND_NAME') }}/company/{{ item.company.id }}" target="_blank" style="font-family: Helvetica, Arial, sans-serif; color: #e3e8fd; font-size: 28px; line-height: 32px; text-decoration: underline;"><span style="font-family: Helvetica, Arial, sans-serif; color: #1d45ea; font-size: 28px; line-height: 32px; text-decoration: none;">{{ item.company.title }}</span></a></span>
          <div style="height: 20px; line-height: 20px; font-size: 18px;">&nbsp;</div>
          <table cellpadding="0" cellspacing="0" border="0" width="100%" style="width: 100% !important; min-width: 100%; max-width: 100%; background: #fffbe7; border-radius: 2px;">
            {% for demandItem in item.demandItems %}
            <tr>
                <td width="18" style="width: 18px; max-width: 18px; min-width: 18px;">&nbsp;</td>
                <td align="left" valign="top" width="300" style="width: 300px; max-width: 300px; min-width: 300px;">
                  <div style="height: 20px; line-height: 20px; font-size: 18px;">&nbsp;</div>
                  <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 22px;">{{ demandItem.title }}</span>
                </td>
                <td align="left" valign="top">
                  <div style="height: 20px; line-height: 20px; font-size: 18px;">&nbsp;</div>
                  <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 22px;">{{ demandItem.count }} {{ demandItem.quantity.title }}</span>
                </td>
                <td width="18" style="width: 18px; max-width: 18px; min-width: 18px;">&nbsp;</td>
            </tr>
            {% endfor %}
          </table>
          <table cellpadding="0" cellspacing="0" border="0" width="100%" style="width: 100% !important; min-width: 100%; max-width: 100%; background: #fffbe7; border-radius: 2px;">
            <tr>
                <td width="18" style="width: 18px; max-width: 18px; min-width: 18px;">&nbsp;</td>
                <td align="left" valign="top">
                  {% if (item.address or item.delivery_date) %}
                    <div style="height: 20px; line-height: 20px; font-size: 18px;">&nbsp;</div>
                    <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 22px; font-weight: bold;">Доставить {% if item.address %}по адресу{% endif %}</span>
                    <div style="height: 3px; line-height: 3px; font-size: 1px;">&nbsp;</div>
                    <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 22px;">{% if item.address %}{{ item.address }}{% endif %}{% if item.delivery_date %}{% if (item.address and item.delivery_date) %}, {% endif %}<span style="font-style: italic; white-space: nowrap;">до {{ item.delivery_date|date("j F Y") }}</span>{% endif %}</span>
                  {% endif %}
                  <div style="height: 25px; line-height: 25px; font-size: 23px;">&nbsp;</div>
                  <table cellpadding="0" cellspacing="0" border="0" width="200" style="width: 200px !important; max-width: 200px; min-width: 200px; background: #ffd717; border-radius: 4px;">
                      <tr>
                        <td align="center" valign="middle" height="48">
                            <a href="{{ get_env('APP_FRONTEND_NAME') }}/requests/inbox" target="_blank" style="display: block; width: 100%; height: 48px; font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 48px; text-decoration: none; white-space: nowrap;">
                              <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 48px; text-decoration: none; white-space: nowrap;">Ответить&nbsp;на&nbsp;заявку</span>
                            </a>
                        </td>
                      </tr>
                  </table>
                  <div style="height: 23px; line-height: 23px; font-size: 21px;">&nbsp;</div>
                </td>
            </tr>
          </table>
          <div style="height: 23px; line-height: 23px; font-size: 21px;">&nbsp;</div>
          <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 22px;">Вы можете ответить на заявку позже на странице заявок.</span>
          <div style="height: 30px; line-height: 30px; font-size: 28px;">&nbsp;</div>
      </td>
      <td width="24" style="width: 24px; max-width: 24px; min-width: 24px; border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">&nbsp;</td>
    </tr>
    {% include 'partials.help.twig' %}
</table>
{% endblock %}
