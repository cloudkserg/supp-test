{% extends 'layouts.mail.twig' %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0" width="90%" style="width: 90% !important; min-width: 90%; max-width: 90%; background: #ffffff; border-radius: 6px; border-width: 1px; border-style: solid; border-color: #e9e9e9; box-shadow: 0px 2px 9px rgba(0, 0, 0, 0.1);">
    <tr>
      <td width="24" style="width: 24px; max-width: 24px; min-width: 24px; border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">&nbsp;</td>
      <td align="left" valign="top" style="border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">
          <div style="height: 28px; line-height: 28px; font-size: 26px;">&nbsp;</div>
          <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 28px; line-height: 34px; font-weight: bold;">Регистрация</span>
          <div style="height: 8px; line-height: 8px; font-size: 6px;">&nbsp;</div>
          <span style="font-family: Helvetica, Arial, sans-serif; color: #000000; font-size: 16px; line-height: 20px;">
            Id: {{ user.company.id }} <br/>
            Title: {{ user.company.title }} <br/>
            Email: {{ user.company.email }}
          </span>
          <div style="height: 28px; line-height: 28px; font-size: 26px;">&nbsp;</div>
      </td>
      <td width="24" style="width: 24px; max-width: 24px; min-width: 24px; border-width: 1px; border-style: solid; border-color: #f9f9f9; border-top: none; border-left: none; border-right: none;">&nbsp;</td>
    </tr>
    {% include 'partials.help.twig' %}
  </table>
{% endblock %}
